        <ul class="gform_fields right_label">
          <li class="gfield">
            <%= f.label :name, 'Nombre', :class => 'gfield_label' %>
            <div class="ginput_container"><%= f.text_field :name %></div>
          </li>
          <li class="gfield">
            <%= f.label :category_type, 'Tipo de CategorÃ­a', :class => 'gfield_label' %>
            <div class="ginput_container"><%= select :category, :category_type, { "Widget" => "w", "Tema" => "t"} %></div>
          </li>
        </ul>
      </div>
  		<div class="gform_footer right_label">
