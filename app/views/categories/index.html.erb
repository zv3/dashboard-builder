<% title "Categorías" %>

<table>
  <tr>
    <th>Nombre</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% for category in @categories %>
    <tr>
      <td><%=h category.name %></td>
      <td><%= link_to "Editar", edit_category_path(category) %></td>
      <td><%= link_to "Borrar", category, :confirm => 'Está seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Nueva Categor&iacute;a", new_category_path %></p>
